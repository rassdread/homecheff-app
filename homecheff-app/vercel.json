{
	"buildCommand": "npm run build",
	"installCommand": "npm ci",
	"outputDirectory": ".next",
	"framework": "nextjs",
	"env": {
		"NODE_ENV": "production"
	},
	"functions": {
		"app/api/**/*.ts": {
			"maxDuration": 30
		}
	},
	"crons": [
		{
			"path": "/api/cron/schedule-shift-notifications",
			"schedule": "0 * * * *"
		},
		{
			"path": "/api/cron/send-notifications",
			"schedule": "* * * * *"
		}
	],
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				}
			]
		}
	],
	"redirects": [
		{
			"source": "/homecheff-nl",
			"destination": "https://homecheff.nl",
			"permanent": true
		},
		{
			"source": "/homecheff-eu", 
			"destination": "https://homecheff.eu",
			"permanent": true
		}
	]
}
