{
	"buildCommand": "npm run build",
	"installCommand": "npm ci",
	"outputDirectory": ".next",
	"framework": "nextjs",
	"env": {
		"NODE_ENV": "production"
	},
	"functions": {
		"app/api/**/*.ts": {
			"maxDuration": 30
		}
	},
	"crons": [
		{
			"path": "/api/cron/schedule-shift-notifications",
			"schedule": "0 * * * *"
		},
		{
			"path": "/api/cron/send-notifications",
			"schedule": "* * * * *"
		}
	]
}
